doctype html
head
  meta(charset='utf-8')
  title Todo-txt-stats
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD' crossorigin='anonymous' defer='' async='true')
  script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.js' defer='' async='true')
  style.
    #uploadForm{
    padding-top: 20px;
    display: flex;
    justify-content: space-between;
    }
    input.btn{
    flex: 0.8;
    }
    button.btn{
    flex: 0.15;
    }
    .chart-container {
    position: absolute; /*relative*/
    margin: auto;
    height: 250px;
    width: 500px;
    }
.container(style='margin-top: 50px;')
  .container
    nav
      #nav-tab.nav.nav-tabs(role='tablist')
        button#nav-home-tab.nav-link.active(data-bs-toggle='tab' data-bs-target='#nav-home' type='button' role='tab' aria-controls='nav-home' aria-selected='true') Upload form
        button#nav-profile-tab.nav-link(data-bs-toggle='tab' data-bs-target='#nav-profile' type='button' role='tab' aria-controls='nav-profile' aria-selected='false') File upload content
        button#nav-contact-tab.nav-link(data-bs-toggle='tab' data-bs-target='#nav-contact' type='button' role='tab' aria-controls='nav-contact' aria-selected='false') Chart-js
    #nav-tabContent.tab-content
      #nav-home.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='nav-home-tab' tabindex='0')
        .container
          form#uploadForm(action='/upload' method='post' enctype='multipart/form-data' ref='uploadForm')
            input#file.btn.btn-primary(type='file' name='files' multiple='')
            button.btn.btn-primary(type='submit' style='border-radius: 4px;')
              | Upload
      #nav-profile.tab-pane.fade(role='tabpanel' aria-labelledby='nav-profile-tab' tabindex='0')
        p=ejsData 
      #nav-contact.tab-pane.fade(role='tabpanel' aria-labelledby='nav-contact-tab' tabindex='0')
        .container
          .chart-container
            canvas#render-todo-txt-stats
script(type='text/javascript').
  document.getElementById("file").value = "";
  const ctx = document.getElementById('render-todo-txt-stats');
script(type='text/javascript' src='https://cdn.jsdelivr.net/npm/chart.js' defer='' async='true')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js' integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN' crossorigin='anonymous')
script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js' integrity='sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3' crossorigin='anonymous')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js' integrity='sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD' crossorigin='anonymous')
script.
  new Chart(ctx, {
  type: 'bar',
  data: {
  labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
  datasets: [{
  label: '# of Votes',
  data: [12, 19, 3, 5, 2, 3],
  borderWidth: 1
  }]
  },
  options: {
  scales: {
  y: {
  beginAtZero: true
  }
  }
  }
  });
